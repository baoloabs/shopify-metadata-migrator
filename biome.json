{
	"$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
	"files": {
		"ignore": ["node_modules/**", ".idea/**", "./generated/*"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true,
		"ignore": ["node_modules/**", ".idea/**", "./generated/*"]
	},
	"formatter": {
		"ignore": ["node_modules/**", ".idea/**", "./generated/*"],
		"indentWidth": 2,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"ignore": ["node_modules/**", ".idea/**", "./generated/*"],
		"rules": {
			"recommended": true,
			"style": {
				"noVar": "off",
				"noParameterAssign": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"semicolons": "asNeeded"
		}
	}
}
